<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ListPreference
        app:defaultValue="https://dev.eproba.pl"
        app:entries="@array/server_entries"
        app:entryValues="@array/server_values"
        app:key="server"
        app:title="@string/select_server"
        app:useSimpleSummaryProvider="true" />

    <SwitchPreferenceCompat
        app:defaultValue="true"
        app:key="ads"
        app:title="@string/display_ads" />

    <EditTextPreference
        android:key="server_key"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="@string/server_key_summary"
        android:title="@string/server_key" />

</PreferenceScreen>